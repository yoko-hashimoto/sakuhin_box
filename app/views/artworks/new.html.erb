<h2>作品投稿画面</h2>

<%= form_with(model: @artwork, local: true) do |form| %>

  <% if @artwork.errors.any? %>
    <div id="error_explanation">
      <h2><%= @artwork.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @artwork.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <!-- 確認画面から新規作成画面に戻った時等に、 -->
    <!-- アップロードした画像を表示させるための記述 -->
    <p><%= image_tag(@artwork.image.url) if @artwork.image.url %></p>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.text_area :caption, placeholder: 'ひとこと' %>
  </div>

  <div>
    <%= form.label :name, 'クリエイター' %>
    <%# ユーザーに紐付いているクリエイターをプルダウン表示する %>
    <%= form.collection_select :creator_id, current_user.creators.all, :id, :name %>
  </div>

  <div>
    <%= form.label :created_date, '作った時期' %>
    <%= form.date_select :created_date,  discard_day: true %>
  </div>
  <div>
    <%# 作品の公開設定をbooliean型の、is_publishedカラムで設定する %>
    <%# :checked => true によってデフォルトでチェックを付けた状態にする %>
    <label><%= form.radio_button :is_published, true %>公開する</label>
    <label><%= form.radio_button :is_published, false, :checked => true %>公開しない</label>
  </div>
  <div>

   <%# タグ入力フォームを追加 %>
   <%#= form.label :folder_name, "フォルダ名" %>


  <%#= fom.fields_for :folder do |folder| %><!-- ここから子レコードcreatorに入力する内容 -->
    <!--以下１：子モデルfolderへ入力する内容 -->
    <!--artworkモデルに送るform_forとは別にfolderに送るフォームを作成。 -->
    <%= form.fields_for :folder do |folder| %>
      <div>
        <%= folder.label :folder_name, "フォルダ名" %>
        <%= folder.text_field :folder_name %>
      </div>
    <% end %>


      <!--
      <div>
        <%= form.label :folder_name, 'フォルダ名選択' %>
        <%# クリエイターに紐付いているフォルダ名をプルダウン表示する %>
        <%= form.collection_select :folder_id, Folder.all, :id, :folder_name %>
      </div>
      -->

      <div class="field">
        <%= form.label :folder %>
        <%= select_tag :folder_id, options_from_collection_for_select(Folder.where(creator_id: current_user.id), :id, :folder_name, params[:folder_id]) %>
      </div>

  <%= link_to 'folder新規作成', new_folder_path %>


  </div>
  <div>
    <%= form.submit %>
    <!--<input type="submit" value="登録" />-->
    <!--<input type="button" onclick="submit();" value="送信" />-->
    <%#= form.submit, type: 'button', onclick: 'submit();' %>
  </div>
<% end %>