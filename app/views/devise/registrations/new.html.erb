<div class = "sign-up">
  <div class = "container">
    <h3 class = "page-title">Sign up</h3>

    <div class = "form-horizontal sign-up-form" role = "form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class = "col-xs-12 col-sm-6 col-sm-offset-3">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

        <div class="field form-group">
          <%#= f.label :username, "ユーザーネーム", class: "col-sm-2 col-sm-offset-3 control-label"%>
          <div class="col-sm-4 col-sm-offset-4">
            <%= f.text_field :username, placeholder: "ユーザーネーム", class: "form-control"%>
          </div>
        </div>

        <div class="field form-group">
          <%#= f.label :email, class: "col-sm-2 col-sm-offset-3 control-label"%>
          <div class="col-sm-4 col-sm-offset-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
          </div>
        </div>

        <div class="field form-group">
          <%#= f.label :password, class: "col-sm-2 col-sm-offset-3 control-label" %>
          <% if @minimum_password_length %>
          <!--<em>(<%= @minimum_password_length %>文字以上)</em>-->
          <% end %>
          <div class="col-sm-4 col-sm-offset-4">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）", class: "form-control" %>
          </div>
        </div>

        <div class="field form-group">
          <%#= f.label :password_confirmation, class: "col-sm-2 col-sm-offset-3 control-label" %>
          <div class="col-sm-4 col-sm-offset-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）", class: "form-control" %>
          </div>
        </div>

          <%#= f.fields_for :creators do |al| %><!-- ここから子レコードcreatorに入力する内容 -->
          <!--以下１：多の子モデルcreatorへ入力する内容 -->
          <!--userモデルに送るform_forとは別にcreatorに送るフォームを作成。resource(ユーザー)の子creatorを１対多で作成 -->
          <%= f.fields_for :creators, resource.creators.build || Creator.new do |al| %>
            <div class="field form-group">
              <%#= al.label :creator, "クリエイター", class: "col-sm-2 col-sm-offset-3 control-label" %>
              <div class="col-sm-4 col-sm-offset-4">
                <%= al.text_field :name, placeholder: "クリエイター（作品を作った人）", class: "form-control" %>
              </div>
            </div>
          <% end %>

        <div class="form-group">
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-default col-xs-4 col-xs-offset-4 col-sm-2 col-sm-offset-5" %>
        </div>
      <% end %>

    </div>

    <%#= render "devise/shared/links" %>

  </div>
</div>